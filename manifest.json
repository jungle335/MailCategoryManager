{
  "manifest_version": 2,
  "name": "Yahoo Mail Category Manager",
  "version": "1.0",
  "permissions": [
    "identity",
    "notifications",
    "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "yahoomail@yourchoice.com"
    }
  },
  "background": {
    "scripts": ["config.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}